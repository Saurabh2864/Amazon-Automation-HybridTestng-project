<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">

    <!-- Define properties for reuse -->
    <Properties>
        <Property name="log-path">./logs</Property>
        <Property name="log-file-name">Amazon-testng-selenium-log</Property>
        <Property name="log-level">info</Property> <!-- Change to desired log level: trace, debug, info, warn, error, fatal -->
        <Property name="pattern">%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <!-- Define appenders (Are used to where to generate logs(Console/File) -->
    
    <Appenders>

        <!-- Console appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}" />
        </Console>

        <!-- Rolling File appender -->
        <RollingFile name="RollingFile" fileName="${log-path}/${log-file-name}.log"
                     filePattern="${log-path}/${log-file-name}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${pattern}" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>

    </Appenders>

    <!-- Define loggers -->
    <Loggers>

        <!-- Root logger -->
        <Root level="${log-level}">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Root>

        <!-- Add custom loggers if needed -->
        <!-- Example: Logger for Selenium classes -->
        <Logger name="org.openqa.selenium" level="debug" additivity="false">
            <AppenderRef ref="RollingFile" />
        </Logger>

    </Loggers>
</Configuration>
